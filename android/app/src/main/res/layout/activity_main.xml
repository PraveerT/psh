<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PhoneSSH"
            android:textColor="#58A6FF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stopped"
            android:textColor="#8B949E"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp" />

        <!-- Service control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_start_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Service"
                android:backgroundTint="#238636"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_rotate_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rotate Token"
                android:backgroundTint="#DA3633"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- QR Code card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pair via QR Code"
                    android:textColor="#C9D1D9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Run `psh pair` on your laptop and scan this code"
                    android:textColor="#8B949E"
                    android:textSize="12sp"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_ip_addresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IP: detecting..."
                    android:textColor="#58A6FF"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_fingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token fingerprint: ..."
                    android:textColor="#8B949E"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_pair_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#3FB950"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btn_copy_url"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Copy Pairing URL"
                    android:textSize="13sp"
                    android:backgroundTint="#21262D"
                    android:textColor="#58A6FF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Permissions card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Special Permissions"
                    android:textColor="#C9D1D9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_notif_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notification access: checking..."
                    android:textColor="#8B949E"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_notif_access"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Grant Notification Access"
                    android:textSize="11sp"
                    android:backgroundTint="#21262D"
                    android:textColor="#58A6FF"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_dnd_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DND access: checking..."
                    android:textColor="#8B949E"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_dnd_access"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Grant DND Access"
                    android:textSize="11sp"
                    android:backgroundTint="#21262D"
                    android:textColor="#58A6FF"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_write_settings_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Write settings: checking..."
                    android:textColor="#8B949E"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_write_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Grant Write Settings"
                    android:textSize="11sp"
                    android:backgroundTint="#21262D"
                    android:textColor="#58A6FF"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_accessibility_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accessibility (screenshot): not granted"
                    android:textColor="#8B949E"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_accessibility_access"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Grant Accessibility Access"
                    android:textSize="11sp"
                    android:backgroundTint="#21262D"
                    android:textColor="#58A6FF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Activity log -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#161B22"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activity Log"
                    android:textColor="#C9D1D9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No activity yet"
                    android:textColor="#3FB950"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
